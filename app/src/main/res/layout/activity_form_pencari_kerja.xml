<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="ID" />-->

        <!--<EditText-->
        <!--android:id="@+id/txt_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <!--<requestFocus/>-->
        <!--</EditText>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Username"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:inputType="text"
            android:textSize="14sp">

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Password"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Confirmasi Password"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="* Username &amp; Password maksimal 12 Karakter (huruf atau angka)"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="No KTP"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_noktp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Nama"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_nama_pencari_kerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:textSize="14sp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="* Nama Harus Sesuai dengan Ijazah Terakhir \n Jika Tidak Maka Pendaftaran Tidak akan diproses"
        android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Jenis Kelamin" />

        <RadioGroup
            android:id="@+id/radioJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioLaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:checked="true"
                android:text="Laki-Laki"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radioPerempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:text="Perempuan"
                android:textSize="13sp" />

        </RadioGroup>
        <!--<EditText-->
        <!--android:id="@+id/txt_jk_pencari_kerja"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Tempat, Tanggal Lahir"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_ttl_pencari_kerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Provinsi"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spnProvinsiKerja"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:prompt="@string/nama_provinsi"
            android:entries="@array/provinsi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Kabupaten/Kota"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spnKabupatenKerja"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:prompt="@string/nama_kabupaten"
            android:entries="@array/prov_aceh"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Asal Sekolah"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_asal_sekolah_pencaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Pendidikan (Non Formal)"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_pendidikan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:gravity="top"
            android:hint="Isi Pendidikan Anda"
            android:inputType="textMultiLine"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Ketrampilan"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_ketrampilan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Pengalaman Kerja"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_pengalaman"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_edit_text"
            android:ems="5"
            android:gravity="top"
            android:hint="Isi Pengalaman Kerja Anda"
            android:inputType="textMultiLine"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Alumni BLKI"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/radioAlumni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioYa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:checked="true"
                android:text="Ya"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radioTidak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:text="Tidak"
                android:textSize="13sp" />

        </RadioGroup>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:text="Photo"-->
            <!--android:textSize="12sp" />-->

        <!--<EditText-->
            <!--android:id="@+id/txt_photo_bursa"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/custom_edit_text"-->
            <!--android:ems="5"-->
            <!--android:hint="Browse Photo"-->
            <!--android:textSize="14sp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="Photo"
            android:textSize="12sp" />


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": " />

            <TextView
                android:id="@+id/textViewPathPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path Photo" />


        </TableRow>

        <Button
            android:id="@+id/buttonPilihFilePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Browse File Photo" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:text="Riwayat Hidup (CV)"-->
            <!--android:textSize="12sp" />-->

        <!--<EditText-->
            <!--android:id="@+id/txt_cv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/custom_edit_text"-->
            <!--android:ems="5"-->
            <!--android:hint="Riwayat Hidup"-->
            <!--android:textSize="14sp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:text="CV"
            android:textSize="12sp" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": " />

            <TextView
                android:id="@+id/textViewPathCv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path CV" />


        </TableRow>

        <Button
            android:id="@+id/buttonPilihFileCv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Browse File CV" />


        <Button
            android:id="@+id/buttonUploadPencaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="btnPencariKerja_Click"
            android:text="Kirim"
            android:textAllCaps="true" />

    </LinearLayout>
</ScrollView>